class Solution {
public:
    bool isValid(string s) {
        //if(s[i]=='(' && s[i+1]==')')  (())
        stack<char> st;
        for(int i=0;i<s.size();i++){
            if(s[i]=='(' || s[i]=='[' || s[i]=='{'){
                if(s[i]=='(') st.push(')');
                if(s[i]=='{') st.push('}');
                if(s[i]=='[') st.push(']');
            }
            else{
                if(!st.empty()){
                    if(st.top()==s[i]){
                        st.pop();
                    }
                    else return false;
                }
                else return false;   
            }
        }
        if(st.empty()) return true;
        else return false;
    }
};
